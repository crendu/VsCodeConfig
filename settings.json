        "cSpell.spellCheckOnlyWorkspaceFiles": true,
        "cSpell.suggestionMenuType": "quickFix",
        "cSpell.suggestionNumChanges": 3,
        "cSpell.suggestionsTimeout": 400,
        "cSpell.useGitignore": false,
        "cSpell.usePnP": false,
        "cSpell.validateDirectives": true,

    // Compare Folders
        "compareFolders.compareContent": true,
        "compareFolders.diffLayout": "local <> compared",
        "compareFolders.diffViewTitle": "name only",
        "compareFolders.ignoreAllWhiteSpaces": true,
        "compareFolders.ignoreEmptyLines": true,
        "compareFolders.ignoreFileNameCase": false,
        "compareFolders.ignoreLineEnding": true,
        "compareFolders.ignoreWhiteSpaces": true,
        "compareFolders.showIdentical": false,
        "compareFolders.useDiffMerge": true,
        "compareFolders.warnBeforeDelete": true,

