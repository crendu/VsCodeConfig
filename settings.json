{
    /***************
     * ENVIRONMENT *
     ***************/
    "editor.codeActionsOnSave": { "source.organizeImports": false },
    "explorer.confirmDelete": false,
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.detectIndentation": false,
    "editor.fontFamily": "Fira Code, Cascadia Code PL, Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.guides.bracketPairs": true,
    "editor.insertSpaces": true,
    "editor.largeFileOptimizations": false,
    "editor.padding.bottom": 200,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        80,
        {
            "column": 120,
            "color": "#ff4081"
        },
        {
            "column": 160,
            "color": "#ff0000"
        },
    ],
    "editor.scrollBeyondLastLine": false,
    "editor.showDeprecated": true,
    "editor.showUnused": true,
    "editor.suggestSelection": "first",
    "editor.tabSize": 4,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": true,

    "security.workspace.trust.enabled": false,
    "telemetry.telemetryLevel": "off",

    "workbench.colorCustomizations": { "editorUnnecessaryCode.border": "#ff4081" },
    "workbench.colorTheme": "SynthWave '84 Blues",
    "workbench.startupEditor": "none",


    /********************
     * FILES PARAMETERS *
     ********************/
    "files.autoGuessEncoding": true,    // To resolve pb with UTF8 VS Windows1252 encoding.
    "files.associations": {
        "*.cfg": "libconfig",
        "*.gcp": "makefile",
        "*.rc": "rc-script",
        "*.rsc": "properties"
    },
    "files.exclude": {
        "**/*-x64-vc14": true,
        "**/*-x86-vc10": true,
        "**/*.csproj": true,
        // "**/*.dat": true,
        // "**/*.factorypath": true,
        // "**/*.git": true,
        "**/*.o": true,
        // "**/*.project": true,
        // "**/*.settings": false,
        "**/*.sln": true,
        "**/*.updt": true,
        "**/*.vcxproj": true,
        "**/*.vcxproj.filters": true,
        "**/*.vcxproj.user": true,
        "**/*.vdproj": true,
        // "**/bin/": true,
        // "**/build/": true,
        // "**/docs/": true,
        // "**/javatest/": true,
        // "**/shared/": true,
    },
    "search.exclude": {
        "**.acx": true,
        "**.css": true,
        "**.html": true,
        "**.js": true,
        "**.log": true,
        "**.map": true,
        "**.md": true,
        "**.olf": true,
        "**.out": true,
        "**.php": true,
        "**.xsl": true,
        "**.yaml": true,
        // "**/target/": true,
        // "**/templates/": true
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "search.followSymlinks": false, // Seems to avoid High CPU usage

    "[cmd]": {
        "files.encoding": "windows1252"
    },



    /******************
     * COMMAND PROMPT *
     ******************/
    // Command Prompt SSH --> need openssh
    "terminal.integrated.profiles.windows": {
        // "GitBash": {
        //     "path": ["C:\\Programy\\Git\\bin\\bash.exe"],
        //     "icon": "terminal-bash"
        // },
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": ["${env:windir}\\System32\\cmd.exe"],
            "icon": "terminal-cmd"
        }
    },
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "terminal.integrated.cwd": "${fileDirname}",


    /***********************
     * EXTENSIONS SETTINGS *
     ***********************/
    // Batch Runner
        "batchrunner.cmdPath": "C:\\windows\\System32\\cmd.exe",
        "batchrunner.runBatchIn": "Terminal",

    // C/C++
        "C_Cpp.addNodeAddonIncludePaths": false,
        "C_Cpp.autoAddFileAssociations": true,
        "C_Cpp.autocomplete": "default",
        "C_Cpp.autocompleteAddParentheses": true,
        "C_Cpp.caseSensitiveFileSupport": "default",
        "C_Cpp.codeAnalysis.clangTidy.codeAction.formatFixes": true,
        "C_Cpp.codeAnalysis.clangTidy.codeAction.showClear": "AllAndAllTypeAndThis",
        "C_Cpp.codeAnalysis.clangTidy.codeAction.showDisable": true,
        "C_Cpp.codeAnalysis.clangTidy.codeAction.showDocumentation": true,
        "C_Cpp.codeAnalysis.clangTidy.enabled": true,
        "C_Cpp.codeAnalysis.clangTidy.useBuildPath": false,
        "C_Cpp.codeAnalysis.runAutomatically": true,
        "C_Cpp.codeFolding": "enabled",
        "C_Cpp.configurationWarnings": "enabled",
        "C_Cpp.debugShortcut": false,
        "C_Cpp.debugger.useBacktickCommandSubstitution": false,
        "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,
        "C_Cpp.default.cStandard": "c23",
        "C_Cpp.default.cppStandard": "c++23",
        "C_Cpp.default.enableConfigurationSquiggles": true,
        "C_Cpp.default.intelliSenseMode": "windows-gcc-x64",
        "C_Cpp.default.mergeConfigurations": true,
        "C_Cpp.dimInactiveRegions": true,
        "C_Cpp.doxygen.generateOnType": true,
        "C_Cpp.doxygen.generatedStyle": "/**",
        "C_Cpp.enhancedColorization": "enabled",
        "C_Cpp.errorSquiggles": "enabledIfIncludesResolve",
        "C_Cpp.exclusionPolicy": "checkFilesAndFolders",
        "C_Cpp.experimentalFeatures": "enabled",
        "C_Cpp.formatting": "vcFormat",
        "C_Cpp.hover": "default",
        "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
        "C_Cpp.inlayHints.autoDeclarationTypes.showOnLeft": false,
        "C_Cpp.inlayHints.parameterNames.enabled": true,
        "C_Cpp.inlayHints.parameterNames.hideLeadingUnderscores": false,
        "C_Cpp.inlayHints.parameterNames.suppressWhenArgumentContainsName": true,
        "C_Cpp.inlayHints.referenceOperator.enabled": true,
        "C_Cpp.inlayHints.referenceOperator.showSpace": true,
        "C_Cpp.intelliSenseCacheSize": 5120,
        "C_Cpp.intelliSenseEngine": "default",
        "C_Cpp.intelliSenseMemoryLimit": 4096,
        "C_Cpp.intelliSenseUpdateDelay": 2000,
        "C_Cpp.legacyCompilerArgsBehavior": true,
        "C_Cpp.loggingLevel": "Error",
        "C_Cpp.preferredPathSeparator": "Backslash",
        "C_Cpp.references.maxCachedProcesses": 0,
        "C_Cpp.renameRequiresIdentifier": true,
        "C_Cpp.simplifyStructuredComments": true,
        "C_Cpp.sshTargetsView": "enabled",
        "C_Cpp.suggestSnippets": true,
        "C_Cpp.vcFormat.indent.accessSpecifiers": true,
        "C_Cpp.vcFormat.indent.braces": false,
        "C_Cpp.vcFormat.indent.caseContents": false,
        "C_Cpp.vcFormat.indent.caseContentsWhenBlock": false,
        "C_Cpp.vcFormat.indent.caseLabels": false,
        "C_Cpp.vcFormat.indent.gotoLabels": "none",
        "C_Cpp.vcFormat.indent.lambdaBracesWhenParameter": true,
        "C_Cpp.vcFormat.indent.multiLineRelativeTo": "innermostParenthesis",
        "C_Cpp.vcFormat.indent.namespaceContents": true,
        "C_Cpp.vcFormat.indent.preprocessor": "leftmostColumn",
        "C_Cpp.vcFormat.indent.preserveComments": true,
        "C_Cpp.vcFormat.indent.preserveWithinParentheses": false,
