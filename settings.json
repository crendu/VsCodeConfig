{
	"editor.codeActionsOnSave": { "source.organizeImports": false },
	"workbench.colorCustomizations": { "editorRuler.foreground": "#ff4081" },
	"editor.cursorBlinking": "phase",
	"editor.cursorSmoothCaretAnimation": true,
	"editor.detectIndentation": true,
	"editor.fontFamily": "Fira Code, Cascadia Code PL, Consolas, 'Courier New', monospace",
	"editor.fontLigatures": true,
	"editor.guides.bracketPairs": true,
	"editor.insertSpaces": false,
	"editor.renderWhitespace": "boundary",
	"editor.rulers": [80,120],
	"editor.showDeprecated": true,
	"editor.showUnused": true,
	"editor.suggestSelection": "first",

	"security.workspace.trust.enabled": false,

	"synthwave84blues.brightness": 0.9,
	"synthwave84blues.disableGlow": false,

	"vsicons.dontShowNewVersionMessage": true,

	"workbench.colorCustomizations": {
		"editorRuler.foreground": "#ff4081",
		"editorUnnecessaryCode.border": "#dd7aab"
	},
	"workbench.colorTheme": "SynthWave '84 Blues",
	"workbench.iconTheme": "vscode-icons",

	"files.exclude": {
		"**/*.csproj": true,
		"**/*.dat": true,
		"**/*.factorypath": true,
		"**/*.git": true,
		"**/*.o": true,
		"**/*.project": true,
		"**/*.settings": false,
		"**/*.sln": true,
		"**/*.updt": true,
		"**/*.vdproj": true,
		"**/.factorypath": true,
		"**/.project": true,
		"**/.settings": true,
		"**/bin/": true,
		"**/build/": true,
		"**/docs/": true,
		"**/javatest/": true,
		"**/shared/": true
	},
	"search.exclude": {
		"**/*.csproj": true,
		"**/*.dat": true,
		"**/*.git": true,
		"**/*.o": true,
		"**/*.sln": true,
		"**/*.updt": true,
		"**/*.vdproj": true,
		"**/bin/": true,
		"**/build/": true,
		"**/docs/": true,
		"**/javatest/": true,
		"**/shared/": true,
		"**/target/": true,
		"**/templates/": true
	},


	/*************
	 * EXTENSION *
	 *************/
	// Command Prompt SSH --> need openssh
	"terminal.integrated.profiles.windows": {
		"GitBash": {
			"path": ["C:\\Programy\\Git\\bin\\bash.exe"],
			"icon": "terminal-bash"
		},
		"PowerShell": {
			"source": "PowerShell",
			"icon": "terminal-powershell"
		},
		"Command Prompt": {
			"path": ["${env:windir}\\System32\\cmd.exe"],
			"icon": "terminal-cmd"
		}
	},
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	"terminal.integrated.cwd": "${fileDirname}",

	// Oracle SQL/PLSQL --> mycelo.oracle-plsql
	"files.associations": {
		"*.sql": "oracle",
		"*.ddl": "oracle",
		"*.dml": "oracle",
		"*.pks": "oracle",
		"*.pkb": "oracle",
		"*.xhtml": "html"
	},

	// Java Config
	"java.autobuild.enabled": false,
	//"java.checkstyle.configuration": "${workspaceFolder}\\.vscode\\checkstyle.xml",
	//"java.format.enabled": true,
	//"java.format.settings.profile": "style",
	"java.format.settings.url": ".vscode/eclipse-formatter.xml",
	"java.home": "C:\\Program Files\\Java\\jdk-11.0.8",

	"C_Cpp.updateChannel": "Insiders",
	"csharp.referencesCodeLens.enabled": false,
	"gitlens.views.commits.showBranchComparison": "branch",
	"git.autofetch": true,
	"explorer.confirmDelete": false,
	"editor.largeFileOptimizations": false,
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
}
